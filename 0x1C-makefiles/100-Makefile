CC = gcc
SRC = main.c school.c
OBJ := $(patsubst %.c, %.o, $(SRC))
NAME = school
RM = /bin/rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

# Check if m.h exists
ifeq ($(wildcard m.h),)
$(error "Header file m.h is missing!")
endif
